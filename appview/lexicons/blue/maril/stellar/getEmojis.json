{
  "lexicon": 1,
  "id": "blue.maril.stellar.getEmojis",
  "defs": {
    "main": {
      "type": "query",
      "description": "Return all Bluemoji in the AppView.",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "The number of records to return."
          },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["items"],
          "properties": {
            "cursor": { "type": "string" },
            "items": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "blue.moji.collection.item#itemView"
              }
            }
          }
        }
      }
    },
    "itemView": {
      "type": "object",
      "required": ["uri", "record"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "record": { "type": "ref", "ref": "blue.moji.collection.item#itemView" }
      }
    }
  }
}
